EXTRA_DIST = deploy/Makefile-reqs.orig deploy/reqs.mk deploy/README deploy/slenv
SUBDIRS = . tools lib programs doc

README: $(srcdir)/doc/README.txt
	$(AM_V_at)rm -f $@
	$(AM_V_GEN)cp $(srcdir)/doc/README.txt $@
	$(AM_V_at)chmod -w $@

NEWS: $(srcdir)/doc/NEWS.txt
	$(AM_V_at)rm -f $@
	$(AM_V_GEN)cp $(srcdir)/doc/NEWS.txt $@
	$(AM_V_at)chmod -w $@

# run `slt' on the console (eye candy, for more intensive CPU
# usage and faster results, use `make check')

check-slt:
	$(AM_V_at)for d in tools lib; do (cd $$d && $(MAKE) $(AM_MAKEFLAGS) all); done
	$(AM_V_at)set -e; for d in `find . -type d \
	    -and -exec test -r '{}'/Makefile \; \
	    -and -exec test -r $(srcdir)/'{}'/Makefile.am \; \
	    -and -exec grep -q 'tests\.mk' '{}'/Makefile \; \
	    -and -print`; do \
	   (cd $$d && $(MAKE) $(AM_MAKEFLAGS) check-slt) \
	done

find_sources = \
	find $(srcdir)/tools $(srcdir)/lib $(srcdir)/programs \
	  -name '*.h' \
	-or -name '*.c' \
	-or -name '*.cpp' \
	-or -name '*.cc' \
	-or -name '*.hh' | \
	grep -v 'lib/src/malloc.c' 

# Update copyright notice.
rehead:
	$(find_sources) | xargs perl $(srcdir)/reheader.pl

include $(top_srcdir)/sl.mk
show-vars:
	@echo
	@echo ": Set the following to work from the source directory;"
	@echo
	@for n in $(SLC_VARS); do \
	   echo "export $$n;"; \
	done
	@echo "export PATH=$(abs_top_builddir)/tools/bin:$$PATH;"

ACLOCAL_AMFLAGS = -I m4
DISTCHECK_CONFIGURE_FLAGS = --enable-testsuite --disable-demos
